{
	"name": "Twitch Bonus Auto Clicker",
	"description": "Extension that automatically clicks on twitch chain points bonus",
	"version": "4.2.0",
	"permissions": ["tabs"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_title": "Twitch Bonus Auto Clicker"
	},
	"icons": {
		"256": "icon/Gift.png"
	},
	"manifest_version": 2
}
